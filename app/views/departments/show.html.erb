<div class="panel panel-info">
  <div class="panel-heading">
    <div class="page-header">
      <h2>Department info detail</h2>
    </div>
  </div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>
    <%= simple_form_for @department, :html => { :class => "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @department.name %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @department.description %></p>
        </div>
      </div>
    <% end %>

    <%= link_to 'Edit', edit_department_path(@department) %> |
	<%= link_to 'Back', departments_path %>

  </div>
</div>

