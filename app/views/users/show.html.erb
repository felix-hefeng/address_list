<div class="panel panel-info">
  <div class="panel-heading">
    <div class="page-header">
      <h2>User info detail <small>Beta</small></h2>
    </div>
  </div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>
    <%= simple_form_for @user, :html => { :class => "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :department, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.department.name rescue '' %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :position, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.position %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.name %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :sex, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.sex %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :birthday, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.birthday %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.phone %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :mobile, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.mobile %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :address, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><%= @user.address %></p>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :image, :class => 'col-sm-2 control-label' %>
        <div class="col-sm-4">
          <p class="form-control-static"><img src="<%= @user.image %>"/></p>
        </div>
      </div>
    <% end %>

    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>

  </div>
</div>
